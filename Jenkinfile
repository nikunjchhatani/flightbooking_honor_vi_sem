pipeline {
    agent {
        docker {
            image 'maven:3.8.5-openjdk-17'
            args '-v ${WORKSPACE}/.m2:/root/.m2' // ✅ Good: use host Maven cache
        }
    }

    environment {
        MAVEN_OPTS = "-Dmaven.repo.local=.m2/repository"  // ✅ Optional: sets local Maven repo path
    }

    stages {
        stage('Checkout') {
            steps {
                // ✅ Use 'main' branch of your GitHub repo
                git branch: 'main', url: 'https://github.com/nikunjchhatani/flightbooking_honor_vi_sem.git'
            }
        }

        stage('Build') {
            steps {
                // ⚠️ Check if your project root folder is really named 'Flightbooking'
                dir('Flightbooking') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir('Flightbooking') {
                    sh 'mvn test'
                }
            }
        }
    }
}