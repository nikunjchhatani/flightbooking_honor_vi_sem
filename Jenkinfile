pipeline {
    agent any

    environment {
        IMAGE = 'nikunjchhatani/flightbooking:latest'
        PEM_PATH = '/path/to/your/pemfile.pem'  // update accordingly
        JAR_NAME = 'Flightbooking-0.0.1-SNAPSHOT.jar'  // update accordingly
        EC2_USER = 'ec2-user'  // update accordingly
        EC2_HOST = 'your.ec2.instance.ip'  // update accordingly
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/nikunjchhatani/flightbooking_honor_vi_sem'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Use bat or sh depending on your Jenkins agent OS
                    bat """
                    docker run --rm -v %cd%:/app -w /app ${IMAGE} mvn clean package -DskipTests
                    """
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    bat """
                    docker run --rm -v %cd%:/app -w /app ${IMAGE} mvn test
                    """
                }
            }
        }

        stage('Deploy and Run on EC2') {
            steps {
                bat """
                powershell -Command "scp -o StrictHostKeyChecking=no -i '${PEM_PATH}' target/${JAR_NAME} ${EC2_USER}@${EC2_HOST}:~/"
                powershell -Command "ssh -o StrictHostKeyChecking=no -i '${PEM_PATH}' ${EC2_USER}@${EC2_HOST} 'pkill -f ${JAR_NAME} || true; nohup java -jar ${JAR_NAME} > app.log 2>&1 &'"
                """
            }
        }
    }
}
